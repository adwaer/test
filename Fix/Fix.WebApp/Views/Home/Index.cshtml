@model IEnumerable<Fix.WebApp.Models.WebNodeViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron">
    <h1>Nodes availability system!</h1>
    <p>
        <ol>
            <li>
                Red color - unavailable
            </li>
            <li>
                Green color - available
            </li>
            <li>
                Blue color - not checked yet
            </li>
        </ol>
    </p>
</div>

@foreach (var item in Model)
{
    string alert = item.HaveHistory ? item.IsAvailable ?  "success" : "danger" : "info";

    <div class="alert alert-@alert" role="alert">
        <a href="@item.Url" class="alert-link" target="_blank">
            @item.Name
            <span style="float: right">@item.Url</span>
        </a>
    </div>
}

<script>
    setTimeout(function() {
        if (window.location.pathname === '/') {
            window.location.reload();
        }
    }, 60000)
</script>